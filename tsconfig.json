{
  "compilerOptions": {

    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,

    "target": "es5",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": false,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./lib"
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}